{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "node_modules/vue/types/vue.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
